package hello;

//import java.util.Scanner;

public class Hello
{
	public static void main(String[]args)
	{
		System.out.println(5==5.0);
		double a = 0.3;
		double b = 0.1+0.1+0.1;
		System.out.println(a+" "+b);
		System.out.println(a==b);
		System.out.println(Math.abs(a-b)<1e-6);//比较两个数是否相等
		
	}
}
